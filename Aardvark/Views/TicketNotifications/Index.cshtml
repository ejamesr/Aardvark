@model IEnumerable<Aardvark.Models.TicketNotification>
<div id="content">
    <div id="content-header">
        <h1>@ViewBag.Scope Notifications</h1>
    </div> <!-- #content-header -->
    <div id="content-container">
        <h3>Notifications Index</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-highlight" id="table-Users"
                   data-provide="datatable"
                   data-display-rows="25"
                   data-info="true"
                   data-search="true"
                   data-length-change="true"
                   data-paginate="true">
                <thead class="dt-head-center">
                    <tr>
                        <th class="dt-head-center" data-sortable="true">
                            #
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Ticket.Id)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Ticket.Title)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.User.FirstName)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.HasBeenRead)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ticket.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ticket.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HasBeenRead)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sidebar-Notifications').addClass('active');
            $('#sidebar-Notifications').trigger('click');
            @if (ViewBag.Scope == "My")
            {
            <text>$('#sidebar-Notifications-My').addClass('active');</text>
            }
            else if (ViewBag.Scope == "All")
                {
            <text>$('#sidebar-Notifications-All').addClass('active');</text>
                }
                else if (@ViewBag.Scope == "AssignedToTicket")
                {
            <text>$('#sidebar-Notifications-AssignedToTicket').addClass('active');</text>
                }
                else if (ViewBag.Scope == "RemovedFromTicket")
                {
            <text>$('#sidebar-Notifications-RemovedFromTicket').addClass('active');</text>
                }
                else if (ViewBag.Scope == "TicketModified")
                {
            <text>$('#sidebar-Notifications-TicketModified').addClass('active');</text>
                }
                else if (ViewBag.Scope == "CommentCreated")
                {
            <text>$('#sidebar-Notifications-CommentCreated').addClass('active');</text>
                }
                else if (ViewBag.Scope == "CommentModified")
                {
            <text>$('#sidebar-Notifications-CommentModified').addClass('active');</text>
                }
                else if (ViewBag.Scope == "AttachmentCreated")
                {
            <text>$('#sidebar-Notifications-AttachmentCreated').addClass('active');</text>
                }
                else if (ViewBag.Scope == "AttachmentModified")
                {
            <text>$('#sidebar-Notifications-AttachmentModified').addClass('active');</text>
                }
        });
    </script>
}