@model IEnumerable<Aardvark.Models.TicketNotification>
<div id="content">
    <div id="content-header">
        <h1>@ViewBag.Scope Notifications</h1>
    </div> <!-- #content-header -->
    <div id="content-container">
        <h3>Notifications Index</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-highlight" id="table-Users"
                   data-provide="datatable"
                   data-display-rows="25"
                   data-info="true"
                   data-search="true"
                   data-length-change="true"
                   data-paginate="true">
                <thead class="dt-head-center">
                    <tr>
                        <th class="dt-head-center" data-sortable="true">
                            #
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Ticket.Title)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.User.FirstName)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Type)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.Method)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.HasBeenRead)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.UsedEmail)
                        </th>
                        <th class="dt-head-center" data-sortable="true">
                            @Html.DisplayNameFor(model => model.UsedText)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ticket.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Method)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HasBeenRead)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsedEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UsedText)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

