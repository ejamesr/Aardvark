@{
    ViewBag.Title = "About Aardvark";
}
<div id="content">
    <div id="content-header">
        <h1>Welcome to Aardvark...</h1>
    </div> <!-- #content-header -->

    <div class="container">
        <div class="row bump-up">
            <div class="row center">
                <div class="col-sm-6 col-sm-offset-3">
                    <img class="img-responsive" width="500" src="http://www.enchantedlearning.com/agifs/Aardvark_bw.GIF" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-offset-2 col-sm-8">
                    <h4>
                        Aardvark <a href="https://en.wikipedia.org/wiki/Aardvark" target="_blank">uses its sharp claws and powerful muscles to dig out bugs</a>
                        from wherever they are trying to hide... and gets rid of them!
                    </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-offset-2 col-sm-8">
                    <p>
                        <em>
                            NOTE:
                            <br />
                            Aardvark was created as part of my mid-term project at Coder Foundry.  It is a bug-tracking system
                            employing ASP.NET, MVC, C#, LINQ, HTML, CSS, Razor, Entity Framework, SQL Server Database, and other technologies.
                            <br />
                            -- <a href="https://ejamesr.azurewebsites.net/" target="_blank">Eric J. Ruff</a>, Aug 15 2015
                        </em>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
        <script>
            $(document).ready(function () {
                $('#menu-Home').addClass('active');
            });
        </script>
    }

