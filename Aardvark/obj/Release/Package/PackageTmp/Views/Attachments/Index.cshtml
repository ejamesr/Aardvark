@model IEnumerable<Aardvark.Models.TicketAttachment>
@using Aardvark.Models;

@{
    ViewBag.Title = "Index";
    Ticket ticket = ViewBag.Ticket;
}

<div id="content">
    <div id="content-header">
        <h1>Attachments</h1>
    </div> <!-- #content-header -->
    <div id="content-container">
        <h4>Ticket Attachments for Ticket # @ticket.Id</h4>

        <p>
            @Html.ActionLink("Create New Attachment", "Create", new { id = ticket.Id })
        </p>
        <br />
    @if (Model.Count() == 0)
    {
        <h4>There are no attachments for this ticket</h4>
        <br />
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ticket.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FilePath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileUrl)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ticket.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FilePath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileUrl)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" title="Edit"><i class="fa fa-pencil-square-o"></i></a>
                        &nbsp;&nbsp;
                        <a href="@Url.Action("Details", new { id = item.Id })" title="Details"><i class="fa fa-folder-open-o"></i></a>
                        &nbsp;&nbsp;
                        <a href="@Url.Action("Download", new { id = item.Id })" title="Download"><i class="fa fa-download"></i></a>
                    </td>
                </tr>
            }
        </table>
    }
    </div>
</div>


